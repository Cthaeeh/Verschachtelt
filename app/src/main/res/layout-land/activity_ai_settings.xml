<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/ai_settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_AIgame"
        android:id="@+id/button_start_Game"
        android:maxWidth="400dp"
        android:minWidth="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginRight="20dp"
        android:max="6"
        android:layout_above="@+id/button_start_Game"
        android:layout_alignStart="@+id/button_start_Game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty_text"
        android:textColor="@color/difficultyTextColor"
        android:textSize="20sp"
        android:id="@+id/textView_difficulty"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignStart="@+id/button_start_Game" />

    <TextView
        android:maxLines = "200"
        android:scrollbars = "vertical"
        android:text="@string/aboutAI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutAIInfoText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_start_Game"
        android:layout_alignParentBottom="true" />

</RelativeLayout>